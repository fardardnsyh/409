---
import experiences from "../collections/experiences.json";
import AboutExperience from "../components/about-experience.astro";
import PageHeading from "../components/page-heading.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="About Me">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="About Me"
      description="Hello! üëã I'm Asad Ullah Aziz but people call me Asad pronounced as Ah-sud. I like solving problems and making life easier for people using tech."
    />

    <img
      src="/assets/images/about.jpg"
      class="relative z-30 w-full my-10 rounded-xl"
    />

    <h2 class="mb-2 text-2xl font-bold dark:text-neutral-200">Short Bio</h2>
    <p
      class="text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
      A full stack software engineer üë®‚Äçüíª. I have experience building and
      shipping scalable software solutions üöÄ. I have years of experience
      focused on Microservices, CDC, Distributed Systems, Kafka, RabbitMQ,
      SQL/NoSQL Database, RESTful APIs, etc.
    </p>

    <h2
      class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200"
    >
      Experience
    </h2>
    <div class="px-5 py-10">
      {
        experiences.map((experience, loop) => {
          return (
            <>
              {loop == 0 || loop == 1 ? (
                <div class="pb-10 border-l border-gray-200 dark:border-neutral-700">
                  <AboutExperience
                    dates={experience.dates}
                    role={experience.role}
                    company={experience.company}
                    description={experience.description}
                    logo={experience.logo}
                  />
                </div>
              ) : (
                <AboutExperience
                  dates={experience.dates}
                  role={experience.role}
                  company={experience.company}
                  description={experience.description}
                  logo={experience.logo}
                />
              )}
            </>
          );
        })
      }
    </div>

    <h2
      class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200"
    >
      Let's Connect
    </h2>
    <p
      class="text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
      Wanna discuss a million dollor idea or hire me maybe. Shoot me an
      <a
        href="mailto:asadullahaziz99@gmail.com"
        class="text-indigo-600 underline">email</a
      >
      and I'll be sure to get back to you. Or lets connect on
      <a
        href="https://www.linkedin.com/in/asadullahaziz"
        class="text-indigo-600 underline"
        target="_blank">LinkedIn</a
      >.
    </p>
  </section>
</Layout>
